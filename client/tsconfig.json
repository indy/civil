{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "jsx": "react",
        "jsxFactory": "h",
        "strict": true,
        "baseUrl": "./",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "lib": ["es2021", "dom"]
    },
    "include": ["src",
                "www/civil_wasm.d.ts",
                "www/civil_wasm_bg.wasm.d.ts"]
}
