{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "noEmit": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "lib": ["es2021", "dom"]
    },
    "include": ["src",
                "www/civil_wasm.d.ts",
                "www/civil_wasm_bg.wasm.d.ts"]
}
